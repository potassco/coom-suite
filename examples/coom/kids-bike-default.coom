// see Baumeister et al.: Towards Industrial-scale Product Configuration (2024).

product {
	Color   color
    Bool    wheelSupport
	Wheel	frontWheel
	Wheel	rearWheel
}

enumeration Color {
	Red
	Green
	Yellow
	Blue
}

enumeration Wheel {
	attribute	num/inch	size

	W14	= (	 14	)
	W16	= (	 16	)
	W18	= (	 18	)
	W20	= (	 20	)
}

behavior {
	condition color = Yellow
	require frontWheel.size > 16
}

behavior {
	combinations  (wheelSupport	 rearWheel)
	allow         (True          (W14, W16))
	allow         (False         (W18, W20))
}

behavior {
	require frontWheel.size = rearWheel.size
}

behavior {
	default color = Red

	// require color != Red
}
